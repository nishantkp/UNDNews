<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for section name in list item -->
    <style name="list_item_section_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/default_list_item_padding</item>
        <item name="android:textColor">@color/listItemCategoryColor</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for headline in list item -->
    <style name="list_item_headline_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/news_section</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <!-- Style for author name in list item -->
    <style name="list_item_author_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/news_section</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">@dimen/default_list_item_padding</item>
        <item name="android:paddingLeft">@dimen/default_list_item_padding</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for date in list item -->
    <style name="list_item_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <!-- Style for news thumbnail in list item -->
    <style name="list_item_news_thumbnail_style">
        <item name="android:layout_width">@dimen/thumbnail_height</item>
        <item name="android:layout_height">@dimen/thumbnail_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for ListView header text -->
    <style name="list_view_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/default_app_padding</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">@dimen/list_header_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for ListView header text -->
    <style name="list_view_header_section_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/default_app_padding</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for empty TextView for a list -->
    <style name="list_empty_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
